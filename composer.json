{
  "name": "capsule/wardrobe",
  "description": "Веб-приложение для создания и ведения капсульного гардероба",
  "type": "project",
  "require": {
    "php": ">=8.2",
    "ext-pdo": "*",
    "ext-pgsql": "*",
    "ext-gd": "*",
    "ext-zip": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "files": [
      "app/Utils/Helpers.php",
      "app/Utils/Constants.php"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}